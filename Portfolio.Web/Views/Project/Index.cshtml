@model List<Project>
@{
    ViewData["Title"] = "Projelerim";
    Layout = "~/Views/AdminLayout/Layout.cshtml";
    int count = 0;
}

<table class="table table-bordered table-hover">
    <tr>
        <th>#</th>
        <th>Proje Id</th>
        <th>Proje Resmi</th>
        <th>Proje Adı</th>
        <th>Açıklama</th>
        <th>GitHub Linki</th>
        <th>Kategori</th>
        <th>İşlemler</th>
    </tr>
    @foreach (var item in Model)
    {
        count++;
        <tr>
            <th>@count</th>
            <td>@item.ProjectId</td>
            <td><img src="@item.ImageUrl" style="width: 75px; height: 75px;" /></td>
            <td>@item.ProjectName</td>
            <td>@item.Description</td>
            <td><a href="@item.GithubUrl">GitHub Linki</a></td>
            <td>@item.Category?.CategoryName</td>
            <td>
                <button class="btn btn-outline-danger" onclick="deleteProject(@item.ProjectId)">Sil</button>
                <a href="/Project/UpdateProject/@item.ProjectId" class="btn btn-outline-info">Güncelle</a>
            </td>
        </tr>
    }
</table>

<a href="/Project/CreateProject" class="btn btn-outline-primary">Yeni Proje</a>

<script>
    function deleteProject(id){
         Swal.fire({
          title: "Silmek istediğinize emin misiniz?",
          text: "Bu işlemi geri alamazsınız!",
          icon: "warning",
          showCancelButton: true,
          confirmButtonColor: "#3085d6",
          cancelButtonColor: "#d33",
          confirmButtonText: "Evet, Sil!",
          cancelButtonText: "İptal"
        }).then((result) => {
          if (result.isConfirmed) {
              window.location.href = "/Project/DeleteProject/"+id;
          }
        });
    }
</script>